class pokemon:

    public constructeur ( int sexe, chaine nom, int niveau, tableau attaques, tableau types, int defense, int vitesse, int précision, int PV, int poids, int taille, int numerotPokeDex, boolean capture = 0, chaine capturePar = "none", int pokeball = 0, table status = [] ):
        public pokemon -> sexe = sexe
        public pokemon -> nom = nom
        public pokemon -> niveau = niveau
        public pokemon -> numerotPokeDex = numerotPokeDex
        public pokemon -> sprites = getSprites ( numerotPokeDex )
        public pokemon -> attaques[MAXATK] = attaques
        public pokemon -> types[MAXTPE] = types
        public pokemon -> vitesse = vitesse
        public pokemon -> defense = defense
        public pokemon -> PV = PV
        public pokemon -> PVIG = PV
        public pokemon -> précision = précision
        public pokemon -> poids = poids
        public pokemon -> taille = taille
        public pokemon -> capture = capture
        public pokemon -> capturePar = capturePar
        public pokemon -> pokeball = pokeball
        public pokemon -> status = status
        public pokemon -> inventaire = nouvel inventaire ( 1, nom )
    
    public ajouterAuCombat ( )                                                              ; cette fonction n'est pas très utile en sois
        table PokemonStats = [                                                              ; mais elle permet un gain de temps et d'eviter
                                "sexe" : pokemon -> sexe,                                   ; d'aller chercher les variables dans l'objet
                                "nom" : pokemon -> nom,
                                "niveau" : pokemon -> niveau,
                                "numerotPokeDex" : pokemon -> numerotPokeDex,
                                "sprites" : pokemon -> sprites,
                                "attaques" : pokemon -> attaques,
                                "types" : pokemon -> types,
                                "vitesse" : pokemon -> vitesse,
                                "defense" : pokemon -> defense,
                                "PV" : pokemon -> PV,
                                "PVIG" : pokemon -> PVIG,
                                "précision" : pokemon -> précision,
                                "poids" : pokemon -> poids,
                                "taille" : pokemon -> taille,
                                "capture" : pokemon -> capture,
                                "capturePar" : pokemon -> capturePar,
                                "pokeball" : pokemon -> pokeball,
                                "status" : pokemon -> status,
                                "inventaire" : pokemon -> inventaire,
                            ]
        retourner PokemonStats

    public subireAttaque ( int niveauDeLAttaquant, int puissance, table typesDeLAttaque, int statAttaque, int status, int chanceStatus = 50 )

        Niv = niveauDeLAttaquant
        Att = statAttaque
        Pui = puissance
        Def = pokemon -> defense

        CM = CalculResistanceTypes ( typesDeLAttaque, pokemon -> types )

        degats = ( ( ( (Niv * 0.4 + 2) * Att * Pui ) / ( Def * 50 ) ) + 2 ) * CM

        chanceRandom = aleatoire ( 0, 100 )

        si chanceRandom <= chanceStatus

        retourner degats

